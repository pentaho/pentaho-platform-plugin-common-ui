  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>

    <fileSet>
      <directory>${build.javascriptSourceDirectory}/web</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>${basedir}/src/main/resources-filtered/web</directory>
